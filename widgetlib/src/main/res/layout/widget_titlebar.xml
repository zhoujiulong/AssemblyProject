<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/top_empty_view"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dip66"
            android:layout_height="@dimen/dip66"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dip30"
            android:layout_marginLeft="@dimen/dip30"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_toolbar_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxWidth="@dimen/dip420"
            android:maxLines="1"
            android:textColor="#000000"
            android:textSize="@dimen/sip32" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dip50"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dip30"
            android:layout_marginRight="@dimen/dip30"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dip24"
            android:paddingRight="@dimen/dip24"
            android:textColor="#192E76"
            android:textSize="@dimen/sip28"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_right_icon"
            android:layout_width="@dimen/dip66"
            android:layout_height="@dimen/dip66"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dip30"
            android:layout_marginRight="@dimen/dip30"
            android:scaleType="fitXY"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dip560"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_shape_bg_common_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dip58"
            android:gravity="center"
            android:text="内容"
            android:textColor="#000000"
            android:textSize="@dimen/sip30" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip1"
            android:background="#A7A1A4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#A7A1A4"
                android:textSize="@dimen/sip32" />

            <View
                android:id="@+id/view_center_line"
                android:layout_width="@dimen/dip1"
                android:layout_height="match_parent"
                android:background="#A7A1A4" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="#192E76"
                android:textSize="@dimen/sip32" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>





















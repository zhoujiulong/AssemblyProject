<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.zhoujiulong.widgetlib.widget.TitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:widget_title_text="模块A主页" />

    <TextView
            android:id="@+id/tv_go_b"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="A 跳转到 B 模块" />

    <Button
            android:id="@+id/btDownPic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="下载图片" />

    <com.zhoujiulong.widgetlib.widget.RoundImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:widget_all_radius="@dimen/dip20"
            app:widget_bottom_left_radius="@dimen/dip150"
            app:widget_bottom_right_radius="@dimen/dip120"
            app:widget_top_left_radius="@dimen/dip60"
            app:widget_top_right_radius="@dimen/dip90" />

    <com.zhoujiulong.widgetlib.widget.RoundImageView
            android:id="@+id/iv2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:widget_all_radius="@dimen/dip20"
            app:widget_bottom_left_radius="@dimen/dip150"
            app:widget_bottom_right_radius="@dimen/dip120"
            app:widget_top_left_radius="@dimen/dip60"
            app:widget_top_right_radius="@dimen/dip90" />

</LinearLayout>